{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "nixos-rebuild: switch (flake .)",
      "type": "shell",
      "command": "sudo",
      "args": ["nixos-rebuild", "switch", "--flake", "."],
      "options": {
